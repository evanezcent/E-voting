<% include template/header-admin %>

<div class="right-bar">
    <div class="dashboard">
        <div class="box box-user">
            <div class="header ">
                <h3 class="d-inline"><b>Tambah Pemilih</b></h3>
            </div>

            <% if (msg != "") { %>
            <div class="alert alert-danger" role="alert">
                <b><%= msg %></b>
            </div>
            <% }%>
            <div class="form-add-user">
                <form action="/admin/inputUser" method="POST">
                    <div class="form-group">
                        <label for=""><b>Nama : </b></label>
                        <input type="text" class="form-control" name="nama" placeholder="Nama Lengkap" required>
                    </div>
                    <div class="form-group">
                        <label for=""><b>NIS : </b></label>
                        <input type="text" class="form-control" name="nis" placeholder="NIS" required>
                    </div>
                    <div class="form-group">
                        <label for=""><b>Kelas : </b></label>
                        <select class="custom-select" name="classSelect">
                            <% for (var i=0; i< clas.length; i++){ %>
                            <option value="<%= clas[i].kelas %>"> <%= clas[i].kelas %> </option>
                            <% } %>
                            <option value="no" selected required>Pilih Kelas</option>
                        </select>
                    </div>
                    <fieldset>
                        <label><b>Jenis Kelamin</b></label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="kelamin" id="rb-laki" value="laki">
                            <label class="form-check-label">
                                Laki - Laki
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="kelamin" id="rb-perem" value="perempuan">
                            <label class="form-check-label">
                                Perempuan
                            </label>
                        </div>
                    </fieldset>

                    <div class="mt-3 text-center">
                        <button type="submit" class="btn btn-md btn-success"><b>Tambah</b></button>
                        <a href="/admin/user/1" class="btn btn-md btn-danger"><b>Kembali</b></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="footer" class="text-center">
    <P>Copyright 2019</P>
</div>
</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        if ($(window).width() < 600) {
            $('nav').removeClass('fixed-top');
        }
    });
</script>

</html>