<% include template/header-admin %>

<div class="right-bar">
    <div class="dashboard">
        <div class="box">
            <div class="header">
                <h3 class="d-inline"><b>Tambah Pemilih</b></h3>
            </div>

            <div class="form-add-user">
                <form action="/admin/editUser/<%= list._id %>" method="POST">
                    <input type="text" class="form-control" value="<%= list._id %>" name="id" hidden>
                    <div class="form-group">
                        <label for=""><b>Nama : </b></label>
                        <input type="text" class="form-control" name="nama" value="<%= list.nama %>" required>
                    </div>
                    <div class="form-group">
                        <label for=""><b>NIS : </b></label>
                        <input type="text" class="form-control" name="nis" value="<%= list.nis %>" required>
                    </div>
                    <div class="form-group">
                        <label for=""><b>Kelas : </b></label>
                        <input type="text" class="form-control" name="kelas" value="<%= list.kelas %>" required>
                    </div>
                    <fieldset>
                        <label><b>Jenis Kelamin</b></label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="kelamin" id="rb-laki" value="laki">
                            <label class="form-check-label">
                                Laki - Laki
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="kelamin" id="rb-perem" value="perempuan">
                            <label class="form-check-label">
                                Perempuan
                            </label>
                        </div>
                    </fieldset>

                    <div class="mt-3 text-center">
                        <button type="submit" class="btn btn-md btn-success"><b>Edit</b></button>
                        <button type="submit" class="btn btn-md btn-danger"><b>Kembali</b></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="footer" class="text-center">
    <P>Copyright 2019</P>
</div>


</body>
