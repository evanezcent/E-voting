    <link rel="stylesheet" href="/css/style-admin.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-0c38nfCMzF8w8DBI+9nTWzApOpr1z0WuyswL4y6x/2ZTtmj/Ki5TedKeUcFusC/k" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand-lg d-flex justify-content-between fixed-top">
        <a class="navbar-brand" href="#">EVOTTE</a>
        
        <div class="dropdown">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Admin
                </a>
    
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="#">Edit Profil</a>
                    <hr>
                    <a class="dropdown-item text-muted" href="#">Sign Out</a>
                </div>
            </div>
    </nav>

    <div class="left-bar">
        <ul class="list-group">
            <a href="/admin/dashboard">
                <li><i class="fas fa-tachometer-alt"></i></i>Dashboard</li>
            </a>
            <a data-toggle="collapse" href="#collapse-user" role="button" aria-expanded="false" aria-controls="collapseExample">
                <li><i class="fas fa-users-cog"> </i>Manajemen</li>
            </a>
            <div class="collapse" id="collapse-user">
                <a href="/admin/user">
                    <li><i class="fas fa-user"></i>Pemilih</li>
                </a>
                <a href="/admin/kandidat">
                    <li><i class="fas fa-user-tie"></i>Kandidat</li>
                </a>
            </div>
            <a href="http://">
                <li><i class="fas fa-chart-bar"></i>Live Count</li>
            </a>
        </ul>
    </div>

    <div class="right-bar">
        <div class="dashboard">
            <div class="box">
                <div class="header">
                    <h3 class="d-inline">Daftar Kandidat</h3>
                    <a href="/admin/input-kandidat" class="d-inline btn btn-md btn-success float-right">Tambah Kandidat</a>
                </div>

                <div class="list-kandidat d-flex">
                    <div class="card" style="width: 15rem;">
                        <img src="/images/J.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Kandidat 1</h5>
                            <div id="card-btn1" class="button-card d-flex">
                                <a href="#" class="btn btn-success">View</a>
                                <a href="#" class="btn btn-warning">Edit</a>
                                <a href="#" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>

                    <div class="card" style="width: 15rem;">
                        <img src="/images/P.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">Kandidat 2</h5>
                            <div id="card-btn2" class="button-card d-flex">
                                <a href="#" class="btn btn-success">View</a>
                                <a href="#" class="btn btn-warning">Edit</a>
                                <a href="#" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="footer" class="text-center">
        <P>Copyright 2019</P>
    </div>


