<% include template/header-admin %>

<div class="right-bar">
    <div class="dashboard">
        <div class="box">
            <div class="header">
                <h3 class="d-inline">Daftar Kandidat</h3>
                <a href="/admin/input-kandidat" class="d-inline btn btn-md btn-success float-right">Tambah Kandidat</a>
            </div>

            <div class="list-kandidat d-flex">
                <% list.forEach(function(list){ %>
                <div class="card" style="width: 15rem;">
                    <img src="../<%= list.kandidatImg %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= list.nama %></h5>
                        <div id="card-btn1" class="button-card d-flex">
                            <a href="#" class="btn btn-success">View</a>
                            <a href="#" class="btn btn-warning">Edit</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
                <% }); %>

