<% include template/header-admin %>

<div class="right-bar">
    <div class="dashboard">
        <div class="box box-user">
            <div class="header">
                <h3 class="d-inline">Daftar Kandidat</h3>
                <a href="/admin/input-kandidat" class="d-inline btn btn-md btn-success float-right">Tambah Kandidat</a>
            </div>

            <% for (var i=0; i< list.length; i++){ %>
            <div class="list-kandidat">

                <div class="card" style="width: 15rem;">
                    <img src="../<%= list[i].kandidatImg %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= list[i].nama %></h5>
                        <div id="card-btn1" class="button-card">
                            <a href="/admin/detail/<%= list[i]._id %>" class="btn btn-success">View</a>
                            <a href="/admin/edit-kandidat/<%= list[i]._id %>" class="btn btn-warning">Edit</a>
                            <a href="/admin/delete-kandidat/<%= list[i]._id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
                
                <% i = i+1 %>
                <% if (i != list.length ){ %>
                <div class="card" style="width: 15rem;">
                    <img src="../<%= list[i].kandidatImg %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= list[i].nama %></h5>
                        <div id="card-btn1" class="button-card">
                            <a href="/admin/detail/<%= list[i]._id %>" class="btn btn-success">View</a>
                            <a href="/admin/edit-kandidat/<%= list[i]._id %>" class="btn btn-warning">Edit</a>
                            <a href="/admin/delete-kandidat/<%= list[i]._id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
            <% }; %>
        </div>
    </div>
</div>

<div id="footer" class="text-center">
    <P>Copyright 2019</P>
</div>


</body>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        if ($(window).width() < 600) {
            $('nav').removeClass('fixed-top');
            $('#footer').removeClass('fixed-bottom');
            $('#card-btn1').removeClass('d-flex');
        }
    });
</script>

</html>