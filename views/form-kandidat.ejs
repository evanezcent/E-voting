<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <a class="navbar-brand" href="#">EVOTTE</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <a class="nav-link dropdown-toggle" href="#" id="drop-akun" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Admin
            </a>
            <div class="dropdown-menu" aria-labelledby="drop-akun">
                <a class="dropdown-item" href="#">Edit Profil</a>
                <hr>
                <a class="dropdown-item text-muted" href="#">Sign Out</a>
            </div>

        </div>
    </nav>

    <div class="left-bar">
        <ul class="list-group">
            <a href="/admin/dashboard">
                <li><i class="fas fa-tachometer-alt"></i></i>Dashboard</li>
            </a>
            <a data-toggle="collapse" href="#collapse-user" role="button" aria-expanded="false" aria-controls="collapseExample">
                <li><i class="fas fa-users-cog"> </i>Manajemen</li>
            </a>
            <div class="collapse" id="collapse-user">
                <a href="/admin/user">
                    <li><i class="fas fa-user"></i>Pemilih</li>
                </a>
                <a href="/admin/kandidat">
                    <li><i class="fas fa-user-tie"></i>Kandidat</li>
                </a>
            </div>
            <a href="http://">
                <li><i class="fas fa-chart-bar"></i>Live Count</li>
            </a>
        </ul>
    </div>

    <div class="right-bar">
        <div class="dashboard">
            <div class="box">
                <div class="header">
                    <h3 class="d-inline"><b>Tambah Kandidat</b></h3>
                </div>

                <div class="form-add-user">
                    <form>
                        <div class="form-group">
                            <label for=""><b>Nama Kandidat : </b></label>
                            <input type="text" class="form-control" placeholder="Nama Lengkap" required>
                        </div>
                        <div class="form-group">
                            <label for="foto-kandidat"><b>Foto Kandidat : </b></label>
                            <input type="file" class="form-control-file" id="foto-kandidat">
                        </div>
                        <div class="form-group">
                            <label for="visi"><b>Visi : </b></label>
                            <textarea class="form-control" id="visi" rows="3"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="misi"><b>misi : </b></label>
                            <textarea class="form-control" id="misi" rows="3"></textarea>
                        </div>

                        <div class="mt-3 text-center">
                            <button type="submit" class="btn btn-md btn-success"><b>Tambah</b></button>
                            <button type="submit" class="btn btn-md btn-danger"><b>Kembali</b></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="footer" class="text-center">
        <P>Copyright 2019</P>
